<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/wifiName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:minWidth="50dp"
            android:text="SSID"
            android:textSize="19sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/numDevices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of devices"
            app:layout_constraintTop_toBottomOf="@+id/wifiName"/>

        <Button
            android:id="@+id/startScan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Start Scan"/>

    </android.support.constraint.ConstraintLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/percentText"
        android:text="10%"/>
    <ProgressBar
        android:id="@+id/percentBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="10"
        android:max="100"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        style="?android:attr/progressBarStyleHorizontal" />



    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_Net"
        android:layout_width="match_parent"
        android:layout_height="395dp">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/updateDev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Devices" />

</LinearLayout>